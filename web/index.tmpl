<html>

<head>
    <title></title>
</head>

<body>
    <form enctype="multipart/form-data" method="post">

        <p><input type="file" name="convertfile" accept=".wav,.mp3"/></p>
            
        <fieldset id="format">
                {{range $key, $value := .Formats}}
            <input type="radio" id="{{ $key }}" value="{{ $value }}" name="format">
            <label for="{{ $key }}">{{ $value }}</label>
            {{end}}
        </fieldset>
        
        <input type="submit" value="Convert">
    </form>
</body>

</html>